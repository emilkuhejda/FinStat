<?xml version="1.0" encoding="UTF-8" ?>
<ContentView x:Class="FinStat.Mobile.Controls.Divider"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <BoxView BackgroundColor="{DynamicResource Divider}" HorizontalOptions="FillAndExpand">
            <BoxView.HeightRequest>
                <OnPlatform x:TypeArguments="x:Double"
                            Android="1"
                            WinPhone="1"
                            iOS=".5" />
            </BoxView.HeightRequest>
        </BoxView>
    </ContentView.Content>
</ContentView>