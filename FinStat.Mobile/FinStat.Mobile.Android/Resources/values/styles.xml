<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="FinStatTheme" parent="FinStatTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="FinStatTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:windowBackground">@color/window_background</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
    <item name="android:colorActivatedHighlight">@android:color/transparent</item>
  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/accent</item>
  </style>

  <style name="FinStatTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
    <item name="elevation">0dp</item>
  </style>

  <style name="SplashTheme" parent="SplashTheme.Base">
    <item name="colorPrimary">@color/splash_background</item>
    <item name="colorPrimaryDark">@color/splash_background</item>
    <item name="colorAccent">@color/splash_background</item>
  </style>

  <style name="SplashTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <!--<item name="android:windowBackground">@drawable/background_splash</item>-->
  </style>
</resources>